{% extends "_simple_card.html.twig" %}

{% trans_default_domain 'arcanum' %}

{% block data %}
  data-content-name-param="{{ arcanum.name }}"
  data-content-type-param="{{ "label.single"|trans }}"
  data-content-link-param="{{ link|default(path('mage_arcanum_show', {id: arcanum.id})) }}"
  {% if access_decision('edit', arcanum) %}data-content-edit-param="{{ link|default(path('mage_arcanum_edit', { id: arcanum.id })) }}"{% endif %}
{% endblock %}

{% block title %}
  {% include "_icon.html.twig" with {icon: 'arcana/' ~ arcanum.identifier , class: "icon-lg" } only %}
  {{ arcanum.name }}
{% endblock %}

{% block content %}
  {{ arcanum.short }}
{% endblock %}
