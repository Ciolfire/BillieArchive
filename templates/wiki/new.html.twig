{% extends 'base.html.twig' %}

{% trans_default_domain 'app' %}

{% block title %}{{ (entity ~ '.new')|trans }}
{% endblock %}

{% block body %}
  <h1>
    {% include "_icon.html.twig" with {'icon' : entity, 'class': 'icon-lg' } only %}
    {{ action|default('new')|trans }} {{ entity|trans }}
  </h1>

  {{ include('_back.html.twig') }}
  <div class="container py-3 mt-5 g-0">
    <div class="row block">
      <div class="col p-3">
        {{ include('wiki/_form.html.twig', {'button_label': action|default(null)}) }}
      </div>
    </div>
  </div>
{% endblock %}
