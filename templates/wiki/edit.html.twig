{% extends 'base.html.twig' %}

{% trans_default_domain 'app' %}

{% block title %}{{ (entity ~ '.edit')|trans }}
{% endblock %}

{% block body %}
  <div class="container block-neutral">
    <h1 class="py-3">
      {% include "_icon.html.twig" with {'icon' : entity, 'class': 'icon-lg' } only %}
      {{ (entity ~ '.edit')|trans({"element": form.vars.data.name}) }}
    </h1>

    <div class="row block">
      <div class="col p-3">
        {{ include('wiki/_form.html.twig', {'button_label': action|default(null)}) }}
        {{ include('_back.html.twig') }}
      </div>
    </div>
  </div>
{% endblock %}
