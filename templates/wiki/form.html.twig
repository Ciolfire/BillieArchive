{% extends 'base.html.twig' %}

{% trans_default_domain 'app' %}

{% block title %}{{ action|default('new')|trans }} {{ (trans|default(entity) ~ ".label")|trans([], type|default("app")) }}
{% endblock %}

{% block body %}
  <h1>{{ action|default('new')|trans }} {{ (trans|default(entity) ~ ".label")|trans([], type) }}{% include "icon.html.twig" with {'icon' : entity, 'hasTips': 0 } only %}</h1>

  <div class="container py-3 mt-5 g-0">
    <div class="row block">
      <div class="col p-3">
        {{ include('wiki/_form.html.twig', {'button_label': 'Update'}) }}

        <a href="{{ path(entity ~ '_index') }}">back to list</a>
      </div>
    </div>
  </div>
{% endblock %}
