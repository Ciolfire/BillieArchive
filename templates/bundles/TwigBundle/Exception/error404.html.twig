{% extends 'base.html.twig' %}

{% block body %}
  {% block title %}
    <h1 class="text-warning m-5">
      {{ status_code }}
      -
      {{ status_text }}
    </h1>
  {% endblock %}

  {% block text %}
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-4 block text-center">
          {{ exception.message }}
        </div>
      </div>
    </div>
  {% endblock %}
{% endblock %}