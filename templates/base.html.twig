<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
      {% block title %}Billie Archive
      {% endblock %}
    </title>
    <link rel="icon" href="{{ asset('rabbit_move_slow.gif', 'images') }}">
    {% if setting is not defined %}
      {% set setting = "human" %}
    {% endif %}
    {% block stylesheets %}
      {{ encore_entry_link_tags(setting) }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags(setting) }}
    {% endblock %}
  </head>
  <body {% block bodyData %}class="position-relative"{% endblock %}>
    {% if app.user %}
      {% include "header.html.twig" %}
    {% endif %}
    {% for message in app.flashes('notice') %}
      <div class="flash-notice">
        {{ message }}
      </div>
    {% endfor %}
    {% block body %}{% endblock %}
    {% if footer|default(false) == true %}
      {% block footer %}
        <footer class="container footer translate-middle-x">
          <div class="row mb-0">
            {% block footerContent %}{% endblock %}
          </div>
        </footer>
      {% endblock %}
    {% endif %}
    <div id="rabbit"></div>
  </body>
</html>
