{% trans_default_domain 'book' %}

{% if book.merits|length > 0 %}
  <div class="col-4 text-end">
    {% include "_icon.html.twig" with {icon: 'merit'} %}
  </div>
  <div class="col-8">
    <a href="{{ path('merit_list', {'type': 'book', 'id': book.id}) }}">
      {{ "count"|trans({'count': book.merits|length}, 'merit') }}
    </a>
  </div>
{% endif %}
{% if book.derangements|length > 0 %}
  <div class="col-4 text-end">
    {% include "_icon.html.twig" with {icon: 'derangement'} %}
  </div>
  <div class="col-8">
      <a href="{{ path('derangement_list', {'type': 'book', 'id': book.id}) }}">
      {{ "count"|trans({'count': book.derangements|length}, 'derangement') }}
    </a>
  </div>
{% endif %}