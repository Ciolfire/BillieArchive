{{ form_start(form) }}
  {{ form_row(form.name) }}
  {{ form_row(form.type) }}
  {{ form_row(form.category) }}
  {{ form_row(form.description) }}
  {{ form_row(form.effect) }}
  {{ form_row(form.min) }}
  {{ form_row(form.max) }}
  {{ form_row(form.isCreationOnly) }}
  {{ form_row(form.isExpanded) }}
  {{ form_row(form.isUnique) }}
  {{ form_row(form.isFighting) }}
