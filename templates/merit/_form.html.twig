  {% if merit.id is not null %}
    <button type="button" class="float-end btn btn-warning" data-bs-toggle="modal" data-bs-target="#deleteModal-merit-{{ merit.id }}">{% include "_icon.html.twig" with {'icon': 'delete', 'hasTips': 0} only %}</button>
    {% include "element/_delete.html.twig" with {'element': 'merit', 'entity': merit} %}
  {% endif %}
