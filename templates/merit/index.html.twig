{% extends 'base.html.twig' %}

{% block title %}Merit index{% endblock %}

{% block body %}
<div class="container block py-3">

    <h1>Merit index</h1>
    <a href="{{ path('merit_new') }}">Create new</a>
    <table class="table text-sub" style="color:white;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Category</th>
                <th>Details</th>
                <th>Min</th>
                <th>Max</th>
                <th>IsCreationOnly</th>
                <th>Prerequisites</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for merit in merits %}
            <tr>
                <td>{{ merit.name }}</td>
                <td>{{ merit.type|default('universal') }}</td>
                <td>{{ merit.category }}</td>
                <td>{{ merit.description }}</td>
                <td>{{ merit.min }}</td>
                <td>{{ merit.max }}</td>
                <td>{{ merit.isCreationOnly ? 'Yes' : 'No' }}</td>
                <td>{{ merit.prerequisites ? merit.prerequisites|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('merit_show', {'id': merit.id}) }}">show</a>
                    <a href="{{ path('merit_edit', {'id': merit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
