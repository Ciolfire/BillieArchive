{% extends 'base.html.twig' %}

{% block title %}Merit index
{% endblock %}

{% block body %}
  <div class="container block py-3">
    <h1>{{ "merit.title"|trans }}</h1>
    <a href="{{ path('merit_new') }}">Create new</a>
    {% for merit in merits %}
    {# <a href="{{ path('merit_show', {'id': merit.id}) }}"> #}
      <div class="row" data-bs-toggle="collapse" type="button" data-bs-target="#merit_{{ merit.id }}">
        <div class="col-3">
          {% if merit.type == null %}
            {% include "icon.html.twig" with {'icon': 'universal'} only %}
          {% endif %}
          {% include "icon.html.twig" with {'icon': merit.type} only %}
          {{ merit.name }}
          {% include "icon.html.twig" with {'icon': merit.category} only %}
          {% if merit.isFighting %}{% include "icon.html.twig" with {'icon' : 'style' } only %}{% endif %}
          {% if merit.isCreationOnly %}{% include "icon.html.twig" with {'icon' : 'creation' } only %}{% endif %}
        </div>
        <div class="col-1">
          {% for i in 1..merit.min %}{{ "•"|spaceless }}{% endfor %}
          {% if merit.min != merit.max %}
            - {% for i in 1..merit.max %}{{ "•"|spaceless }}{% endfor %}
          {% endif %}
        </div>
        <div class="col-8 text">{{ merit.description }}</div>
      </div>
      <div id="merit_{{ merit.id }}" class="collapse rule">
        <a href="{{ path('merit_edit', {'id': merit.id}) }}">edit</a>
        {% if merit.prerequisites != null %}
          <p>
            Prerequisites:
            {% for prerequisite in merit.prerequisites %}
              {% for item in prerequisite %}
                {{ item[0] ~ item[1] }}
              {% endfor %}
            {% endfor %}
          </p>
        {% endif %}
        {{ merit.effect|markdown_to_html }}
      </div>
      <hr>
    {% endfor %}
  </div>
{% endblock %}
