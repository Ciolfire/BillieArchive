{% extends 'base.html.twig' %}

{% block title %}Merit index{% endblock %}

{% block bodyData %}
  class="mb-5" data-controller="search" data-search-type-value="merit" data-search-filters-value="{}"
{% endblock %}

{% block body %}
  <div class="container block py-3">
    <h1>{{ "merit.title"|trans }}</h1>
    <a href="{{ path('merit_new') }}">Create new</a>
    {% for merit in merits %}
      {% set type = merit.type|default('universal') %}
      {# <a href="{{ path('merit_show', {'id': merit.id}) }}"> #}
      <div class="row merit merit-{{ type }} merit-{{ merit.category }}" data-search-target="item" data-name="{{ merit.name }}" data-type="{{ type }}" data-category="{{ merit.category }}" data-bs-toggle="collapse" type="button" data-bs-target="#merit_{{ merit.id }}">
        <div class="col-12 col-md-3 text-center text-md-start fw-bold">
          {% include "icon.html.twig" with {'icon': type} only %}
          {{ merit.name }}
        </div>
        <div class="col-3 col-md-1">
          {% include "icon.html.twig" with {'icon': merit.category} only %}
          {% if merit.isFighting %}{% include "icon.html.twig" with {'icon' : 'style' } only %}{% endif %}
          {% if merit.isCreationOnly %}{% include "icon.html.twig" with {'icon' : 'creation' } only %}{% endif %}
        </div>
        <div class="col-6 col-md-2">
          {% for i in 1..merit.min %}{{ "•"|spaceless }}{% endfor %}
          {% if merit.min != merit.max %}
            - {% for i in 1..merit.max %}{{ "•"|spaceless }}{% endfor %}
          {% endif %}
        </div>
        <div class="col-12 text">{{ merit.description }}</div>
        <div id="merit_{{ merit.id }}" class="collapse rule m-3">
          <a href="{{ path('merit_edit', {'id': merit.id}) }}">edit</a>
          {% if merit.prerequisites != null %}
            <p>
              Prerequisites:
              {% for prerequisite in merit.prerequisites %}
                {% for item in prerequisite %}
                  {{ item[0] ~ item[1] }}
                {% endfor %}
              {% endfor %}
            </p>
          {% endif %}
          {{ merit.effect|markdown_to_html }}
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}

{% block footer %}
  <footer class="container footer translate-middle">
    <div class="row mb-0">
      <div class="col">
        <i class="fa-solid fa-magnifying-glass"></i>
        <input type="text" data-search-target="query" data-action="search#getResults">
        {% for key, elements in search %}
          {% for element in elements %}
            <a 
            class="btn btn-primary" 
            data-action="click->search#switchFilter"
            data-search-type-param="{{ key }}"
            data-search-filter-param="{{ element }}"
            role="button">
              <span>{{ element|trans([], 'icon') }}{% include "icon.html.twig" with {'icon' : element, 'hasTips': 0 } only %}</span>
            </a>
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  </footer>
{% endblock %}