{% extends 'base.html.twig' %}

{% trans_default_domain 'app' %}

{% block title %}Merit index{% endblock %}

{% block bodyData %}
  data-controller="search" data-search-type-value="merit"
{% endblock %}

{% block body %}
  <div class="container block py-3">
    <h1>{{ "merits"|trans }}</h1>
    {% for merit in merits %}
      {% set type = merit.type|default('universal') %}
      <div class="row justify-content-md-center merit merit-{{ type }} merit-{{ merit.category }}" type="button" data-bs-target="#merit_{{ merit.id }}" data-bs-toggle="collapse" 
      data-search-target="item" 
      data-name="{{ merit.name }}" 
      data-type="{{ type }}" 
      data-category="{{ merit.category }}" 
      data-style="{{ merit.isFighting|default(0) }}"
      >
        <div class="col-12 col-md-3 text-center text-md-start fw-bold">
          {% include "icon.html.twig" with {'icon': type} only %}
          {{ merit.name }}
        </div>
        <div class="col-3 col-md-1">
          {% include "icon.html.twig" with {'icon': merit.category} only %}
          {% if merit.isFighting %}{% include "icon.html.twig" with {'icon' : 'style' } only %}{% endif %}
          {% if merit.isCreationOnly %}{% include "icon.html.twig" with {'icon' : 'creation' } only %}{% endif %}
        </div>
        <div class="col-3 col-md-1">
          {% for i in 1..merit.min %}{{ "•"|spaceless }}{% endfor %}
          {% if merit.min != merit.max %}
            - {% for i in 1..merit.max %}{{ "•"|spaceless }}{% endfor %}
          {% endif %}
        </div>
        <div class="col-3 col-md-2">
          {{ "source"|trans({'%book%': merit.book.short, '%page%': merit.page }) }}
        </div>
        <div class="col-12 text">{{ merit.description }}</div>
        <div class="col-12 col-lg-6">
          <div id="merit_{{ merit.id }}" class="collapse rule">
            <a href="{{ path('merit_edit', {'id': merit.id}) }}">edit</a>
            {% if merit.prerequisites != null %}
              <p>
                Prerequisites:
                {% for prerequisite in merit.prerequisites %}
                  {% for item in prerequisite %}
                    {{ item[0] ~ item[1] }}
                  {% endfor %}
                {% endfor %}
              </p>
            {% endif %}
            {{ merit.effect|markdown_to_html }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}

{% block footer %}
  <footer class="container footer translate-middle-x">
    <div class="row mb-0">
      <div class="col-12 d-flex align-items-center position-relative">
        <span class="search-icon"><i class="fa-solid fa-magnifying-glass fa-fw"></i></span>
        <input class="search-field" type="text" data-search-target="query" data-action="search#getResults">
        <div id="expand_btn" class="position-absolute top-0 start-50 translate-middle" data-bs-toggle="collapse" data-bs-target=".footer-collapse" aria-expanded="false" aria-controls="footer-collapse">
          <span class="footer-collapse show"><i class="fa-solid fa-lg fa-circle-chevron-up"></i></span>
          <span class="footer-collapse collapse"><i class="fa-solid fa-lg fa-circle-chevron-down"></i></span>
        </div>
        <a class="btn btn-primary ms-auto" href="{{ path('merit_new') }}">{% include "icon.html.twig" with {'icon' : 'add', 'hasTips': 1 } only %}</a>
      </div>
      <div class="col-auto py-3 footer-collapse collapse">
        {% for key, elements in search %}
          <h5 class="text-center pe-none">{{ (key ~ ".label")|trans }}</h5>
          {% for element in elements %}
            <a class="btn btn-primary" role="button" data-action="click->search#switchFilter" data-search-type-param="{{ key }}" data-search-filter-param="{{ element }}">
              <span class="d-none d-md-inline">{{ (key ~ "." ~ element)|trans }}</span>{% include "icon.html.twig" with {'icon' : element, 'hasTips': 1 } only %}
            </a>
          {% endfor %}
        {% endfor %}
        <div class="col-auto py-3 footer-collapse collapse">
          <a class="btn btn-primary" role="button" data-action="click->search#switchFilter" data-search-type-param="style" data-search-filter-param="1">
            <span class="d-none d-md-inline">{{ "style"|trans }}</span>{% include "icon.html.twig" with {'icon' : "style", 'hasTips': 1 } only %}
          </a>
        </div>
      </div>
    </div>
  </footer>
{% endblock %}