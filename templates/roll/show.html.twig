{% extends 'base.html.twig' %}

{% trans_default_domain 'app' %}

{% set first = true %}

{% block body %}
  {% include "_back.html.twig" with {'link': path('wiki_index')} %}
  {% include "_top.html.twig" %}
  <div class="container py-3">
    <div class="mt-3">
      <div class="row">
        <div id="{{ roll.id }}" class="block {{ roll.type }} m-3">
          <h1 class="py-3">{{ roll.name }}</h1>
          <hr>
          <div class="row">
            <div class="col-12">
              <div class="action-{{ roll.id }} p-2">{{ roll.details|markdown_to_html }}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

