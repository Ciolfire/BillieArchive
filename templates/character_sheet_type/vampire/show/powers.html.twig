{% trans_default_domain 'vampire' %}

{% set disciplines = character.getFilteredDisciplines('discipline') %}
{% set sorcery = character.getFilteredDisciplines('sorcery') %}
{% set coils = character.getFilteredDisciplines('coils') %}
{% set thaumaturgy = character.getFilteredDisciplines('thaumaturgy') %}
{% set devotions = character.devotions %}

<div data-controller="tabs" data-tabs-initial-value="disciplines" data-tabs-parent-value="vampire">
  {% include "character_sheet_type/vampire/show/_powerTabs.html.twig" %}
  <div id="disciplines" class="tab-content" data-tabs-target="page">
    {% include 'character_sheet_type/vampire/show/disciplines.html.twig' with {'characterDisciplines': disciplines} %}
  </div>
  <div id="sorcery" class="tab-content" data-tabs-target="page">
    {% include 'character_sheet_type/vampire/show/sorceries.html.twig' with {'characterDisciplines': sorcery} %}
  </div>
  <div id="coils" class="tab-content" data-tabs-target="page">
    {% include 'character_sheet_type/vampire/show/disciplines.html.twig' with {'characterDisciplines': coils} %}
  </div>
  <div id="thaumaturgy" class="tab-content" data-tabs-target="page">
    {% include 'character_sheet_type/vampire/show/disciplines.html.twig' with {'characterDisciplines': thaumaturgy} %}
  </div>
  <div id="devotions" class="tab-content" data-tabs-target="page">
    {% include "character_sheet_type/vampire/show/devotions.html.twig" %}
  </div>
</div>
