{% extends 'base.html.twig' %}

{% trans_default_domain 'vampire' %}

{% set setting = 'vampire' %}

{% block title %}{{ 'embrace.label'|trans }}{% endblock %}

{% block body %}
  <div class="container block py-3 mt-5">
    <h1>{{ character.name }} {{ "embrace.title"|trans }}</h1>
    {{ form_start(form, {'attr': {'data-controller': 'character--embrace'}}) }}
      <div class="row pb-2">
        <div class="col-12 col-sm-6 text-center">
        {{form_label(form.age)}}
        {{form_widget(form.age)}}
        </div>
        <div class="col-12 col-sm-6 text-center">
        {{form_label(form.sire)}}
        {{form_widget(form.sire)}}
        </div>
      </div>
    <hr>
    {% include "character_sheet_type/vampire/embrace/_clans.html.twig" %}
    {{ form_row(form.attribute, {'attr': {class: 'btn-check'}}) }}
    <hr>
    {% include "character_sheet_type/vampire/embrace/_disciplines.html.twig" %}
    <hr>
    {% include "character_sheet_type/vampire/embrace/_covenants.html.twig" %}
    <div class="text-center fixed-bottom">
      <button class="btn btn-primary btn-submit btn-lg disabled" type="submit" data-character--embrace-target="submit" data-action="click->character--embrace#clean">
        {% include "_icon.html.twig" with {icon: 'type/vampire'} %}
        {{ "embrace.save"|trans }}
      </button>
    </div>
    {{ form_end(form) }}
  </div>
  {% include "_back.html.twig" %}
  {% endblock %}
