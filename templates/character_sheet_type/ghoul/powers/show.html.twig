{% trans_default_domain 'vampire' %}

{% set disciplines = ghoulCharacter.getFilteredDisciplines('discipline') %}
{% set sorcery = ghoulCharacter.getFilteredDisciplines('sorcery') %}
{% set thaumaturgy = ghoulCharacter.getFilteredDisciplines('thaumaturgy') %}
{% set devotions = ghoulCharacter.devotions %}
{% set coils = [] %}

<div data-controller="tabs" data-tabs-initial-value="disciplines">
  <ul class="nav tabs row g-0">
    {% include "character_sheet_type/vampire/powers/_tabs.html.twig" %}
  </ul>
  <div id="disciplines" class="tab-content d-none" data-tabs-target="page">
    {% include 'character_sheet_type/vampire/disciplines/show/elements.html.twig' with {'characterDisciplines': disciplines, 'character': ghoulCharacter} %}
  </div>
  <div id="sorcery" class="tab-content d-none" data-tabs-target="page">
    {% include 'character_sheet_type/vampire/disciplines/show/sorceries.html.twig' with {'characterDisciplines': sorcery, 'character': ghoulCharacter} %}
  </div>
  <div id="thaumaturgy" class="tab-content d-none" data-tabs-target="page">
    {% include 'character_sheet_type/vampire/disciplines/show/elements.html.twig' with {'characterDisciplines': thaumaturgy, 'character': ghoulCharacter} %}
  </div>
  <div id="devotions" class="tab-content d-none" data-tabs-target="page">
    {% include "character_sheet_type/vampire/devotions/show/elements.html.twig" %}
  </div>
</div>
