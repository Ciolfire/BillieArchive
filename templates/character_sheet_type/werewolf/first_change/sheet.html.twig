{% extends 'base.html.twig' %}

{% trans_default_domain 'werewolf' %}

{% set setting = 'werewolf' %}

{% block title %}{{ 'change.label'|trans }}{% endblock %}

{% block shortcuts %}
  {% include "_back.html.twig" with {link: path('character_show', {id: character.id})} %}
  {% include "_top.html.twig" %}
{% endblock %}

{% block body %}
  <div class="container block py-3 mt-5">
    <h1>{{ character.name }} {{ "change.label"|trans }}</h1>
    {{ form_start(form, {'attr': {'data-controller': 'character--first-change'}}) }}
    <hr>
    {% include "character_sheet_type/werewolf/first_change/_auspice.html.twig" %}
    <hr>
    {# {% include "character_sheet_type/werewolf/first_change/_tribe.html.twig" %} #}
    <hr>
    {# {% include "character_sheet_type/werewolf/first_change/_gift.html.twig" %} #}
    <div class="text-center fixed-bottom">
      <button class="btn btn-primary btn-submit disabled" type="submit" data-character--first-change-target="submit" data-action="click->character--first-change#clean">
        {% include "_icon.html.twig" with {icon: 'type/werewolf'} %}
        {{ "change.first.save"|trans }}
      </button>
    </div>
    {{ form_end(form) }}
  </div>
  {% endblock %}