{% trans_default_domain 'spell' %}

{% set temporal = {
  sensory : "—",
  intimate : "-2",
  known : "-4",
  acquainted : "-6",
  encountered : "-8",
  described : "-10",
  unknown : "—",
} %}

{% if character.getArcanumLevel("time") >= 2 %}
  <div class="col-6 py-2">
    <div class="block py-2 text-center">
      <h4>Temporal Range [{% include "_icon.html.twig" with {icon: "arcana/space"} %}••]</h4>
      <p>
        Temporal spells use the Time Arcanum to extend the mage’s reach virtually anywhen, provided the mage has a strong enough connection to the spell’s target.
      </p>
      <div class="btn-group" role="group">
        {% for key, value in temporal %}
          <input type="radio" class="btn-check" id="temporal-{{ loop.index0 }}" name="temporal" value="{{ "#{value}\n" ~ "rules.sympathy.#{key}.text"|trans }}"
            data-action="mage--spellcasting#updateValue"
            data-mage--spellcasting-type-param="temporal"
          />
          <label class="text-sub btn btn-primary" for="temporal-{{ loop.index0 }}">{{ "rules.sympathy.#{key}.label"|trans }}</label>
        {% endfor %}
      </div>
      <div class="text-strong" data-mage--spellcasting-target="rule" data-type="temporal"></div>
    </div>
  </div>
{% endif %}