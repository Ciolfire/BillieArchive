{% trans_default_domain 'possessed' %}

{% set vices = possessed.getVices %}

<div class="row p-2">
  <h2>
    {% include "_icon.html.twig" with {icon: 'extreme' } %}
    {{ "vestment.label.multi"|trans }}
  </h2>
  {% for key, vestments in possessed.sortedVestments %}
    <h3>{{ "vestment.level"|trans({level: key}) }}</h3>
    {% for vestment in vestments %}
      <div class="col-12 col-md-6 col-lg-4">
        {% include "character_sheet_type/possessed/elements/vestment.html.twig" %}
      </div>
    {% endfor %}
  {% endfor %}
</div>
