      <div class="col-12">
        <div class="block vampire m-1 p-2 rounded">
          <h3>{{ facet.title }} ({{ facet.modifier }})</h3>
          <hr>
          {{ facet.description|markdown_to_html }}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
  <div class="col-12 col-md-6">
    <h2>{{ "frequency.label"|trans }}</h2>
    <p class="text-sub fluff">{{ "frequency.help"|trans }}</p>
    <div class="row justify-content-center">
      {% for facet in bath.frequency %}
      <div class="col-12">
        <div class="block vampire m-1 p-2 rounded">
          <h3>{{ facet.title }} ({{ facet.modifier }})</h3>
          <hr>
          {{ facet.description|markdown_to_html }}
