      {% for facet in bath.bath %}
      <div class="col-12">
        <div class="block vampire m-1 p-2 rounded">
          <h3>{{ facet.title }} ({{ facet.modifier }})</h3>
          <hr>
          {{ facet.description|markdown_to_html }}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
  <div class="col-12 col-md-6">
    <h2>{{ "blood.label"|trans }}</h2>
    <p class="text-sub fluff">{{ "blood.help"|trans }}</p>
