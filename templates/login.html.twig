{% extends 'base.html.twig' %}

{% block body %}
<div class="d-flex align-items-center vh-100">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-4 block text-center">
        {% if error %}
          <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        
        <h1>Login</h1>
        
        <form action="{{ path('login') }}" method="post">
          <div class="mb-3 row">
            <label class="col-form-label col-sm-auto required" for="username">Username</label>
            <div class="col-sm">
              <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
            </div>
          </div>
          <div class="mb-3 row">
            <label class="col-form-label col-sm-auto required" for="password">Password</label>
            <div class="col-sm">
              <input type="password" id="password" name="_password" class="form-control"/>
            </div>
          </div>
          <div class="mb-3 row">
            <div class="col text-end">
              <a href="{{path('app_register')}}">Register</a>
            </div>
          </div>
          {# If you want to control the URL the user is redirected to on success
          <input type="hidden" name="_target_path" value="/account"/> #}
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
          
          <button class="btn btn-primary w-100 mb-2" type="submit">login</button>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
