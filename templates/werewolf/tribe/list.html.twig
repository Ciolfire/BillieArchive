{% extends "base.html.twig" %}

{% trans_default_domain 'tribe' %}

{% set setting = "werewolf" %}

{% block title %}
  {{ label|default("label.multi")|trans }}
{% endblock %}

{% block shortcuts %}
  {% if chronicle|default(false) == false %}
    {{ parent() }}
  {% else %}
    {% include "_back.html.twig" with {link: path('homebrew_index', {id: chronicle})} %}
    {% include "_top.html.twig" %}
  {% endif %}
  {% if is_granted('ROLE_ST') %}
    <a class="btn btn-primary mt-1" href="{{ path('werewolf_tribe_new', {filter: filter|default(null), id: id|default(null), ancient: ancient|default(0)}) }}">
      <span class="d-none d-md-inline">{% include "_icon.html.twig" with {icon : 'add' } only %}</span>
      {% include "_icon.html.twig" with {icon : 'tribe' } only %}
    </a>
  {% endif %}
{% endblock %}

{% block bodyController %}
  {{parent() }} search
{% endblock %}

{% block bodyData %}
  data-search-type-value="tribe"
{% endblock %}

{% block body %}
  {% include "_title.html.twig" with {title: label|default("label.multi") , domain: "tribe"} %}

  <div class="container-fluid block">
    <div id="collapseDescription" class="row justify-content-center collapse p-2">
      <div class="col-12 col-lg-10 col-xl-8">
        {{ description.value|default("")|markdown_to_html }}
      </div>
    </div>

    <div class="row g-2 py-2">
    {% for tribe in tribes|sort((a, b) => a.name|lower <=> b.name|lower) %}
      {% if tribes|length <= 5 %}
        {% include "werewolf/tribe/_card.html.twig" with { hasFew : true} %}
      {% else %}
        {% include "werewolf/tribe/_card.html.twig" %}
      {% endif %}
    {% endfor %}
  </div>
{% endblock %}

{% block footerContent %}
  {% include "_search.html.twig" with { type: "tribe" } %}
{% endblock %}
