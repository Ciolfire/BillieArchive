{% trans_default_domain 'character' %}

<div id="menu" class="container">
  <div class="row text-center text">
    <div class="col-3 px-1">
      <button class="btn btn-sm btn-menu btn-primary w-100" type="button" data-action="click->character--edit#clean">{{ button_label|default('Save') }}</button>
    </div>
    <div class="col-6">
      <input value="0" type="hidden" name="character[xp][spend]" data-character--edit-target="spend">
      <div class="w-100 block">
        <div class="d-flex flex-row justify-content-center btn btn-menu btn-primary btn-sm w-100" data-bs-toggle="collapse" role="button" data-bs-target=".usingInfo">
          <span>details&nbsp;</span>
          <div class="py-0 d-flex flex-column justify-content-center">
            <span class="usingInfo show">
              <i class="fas fa-caret-down"></i>
            </span>
            <span class="usingInfo collapse">
              <i class="fas fa-caret-up"></i>
            </span>
          </div>
        </div>
        <div class="collapse usingInfo" data-character--edit-target="usingInfo">{{ 'xp.details.none'|trans }}</div>
        {{ character.xpUsed }} + <span data-character--edit-target="using">0</span>/{{ character.xpTotal }}
      </div>
    </div>
    <div class="col-3">
      <a class="btn btn-sm btn-menu btn-primary w-100" href="{{ app.request.headers.get('referer') }}">{{ "back"|trans }}</a>
    </div>
  </div>
</div>
