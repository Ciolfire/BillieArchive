{% trans_default_domain 'character' %}

<div id="calculator" class="block text-center text">
  <div>{{ character.xpUsed }} + <span data-character--edit-target="using">0</span>/<span>{{ character.xpTotal }}</div>
  <div class="collapse usingInfo" data-character--edit-target="usingInfo">{{ 'xp.details.none'|trans }}</div>
  <div class="d-flex flex-row justify-content-center border-top" data-bs-toggle="collapse" role="button" data-bs-target=".usingInfo">
    <span>details&nbsp;</span>
    <div class="py-0 d-flex flex-column justify-content-center">
      <span class="usingInfo show"><i class="fas fa-caret-down"></i></span>
      <span class="usingInfo collapse"><i class="fas fa-caret-up"></i></span>
    </div>
  </div>
</div>