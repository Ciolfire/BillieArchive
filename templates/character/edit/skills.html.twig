{% trans_default_domain 'character' %}

{% block skills %}
<h2 class="text-center mt-3">{% trans %}skill.title{% endtrans %}</h2>
<p class="text-center text-sub">
  <span data-character--creation-target="creationSkill">0</span>/11 |
  <span data-character--creation-target="creationSkill">0</span>/7 |
  <span data-character--creation-target="creationSkill">0</span>/4 |
  {% trans %}dot.fifth{% endtrans %}
</p>
{% set max = 5 %}
{% set min = 0 %}
{% set base = 0 %}
{% set skills = {
  'mental': [
    'academics',
    'computer',
    'crafts',
    'investigation',
    'medecine',
    'occult',
    'politics',
    'science',
  ],
  'physical': [
    'athletics',
    'brawl',
    'drive',
    'firearms',
    'larceny',
    'stealth',
    'survival',
    'weaponry',
  ],
  'social': [
    'animal_ken',
    'empathy',
    'expression',
    'intimidation',
    'persuasion',
    'socialize',
    'streetwise',
    'subterfuge',
  ]
} %}
<div class="row">
  {% for category, skills in skills %}
    <div class="col-md-4 d-md-flex justify-content-center">
      <div class="block skill-block">
        <h3 class="d-md-none d-block text-center pt-1">{{ category|trans }}</h3>
        <p class="text-center text-sub mb-0">({{("skill.unskilled." ~ category)|trans }})</p>
        {% for skill in skills %}
          {% include "character/edit/skill.html.twig" with {'category' : category, 'skill': skill, 'base': base, 'max': max, 'min': min } %}
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>
<h2 class="text-center mt-3">{% trans %}specialty.title{% endtrans %}</h2>
<p class="text-center text-sub" data-character--creation-target="creationSpec">({% trans %}specialty.creation{% endtrans %})</p>
<div class="row">
  <div class="col-4">
    <div class="block p-1">
      {{ form_row(form.specialty1) }}
    </div>
  </div>
  <div class="col-4">
    <div class="block p-1">
      {{ form_row(form.specialty2) }}
    </div>
  </div>
  <div class="col-4">
    <div class="block p-1">
      {{ form_row(form.specialty3) }}
    </div>
  </div>
</div>
{% endblock %}