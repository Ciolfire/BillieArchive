{% extends 'base.html.twig' %}

{% trans_default_domain 'character' %}

{% block title %}
  {{ 'characters'|trans }}
{% endblock %}

{% block body %}
  <div class="container-fluid container-lg py-3">
    <div class="row my-3">
      {% if characters is defined %}
        {% include 'character/_list.html.twig' with { title: 'characters.pc', characters: characters, type: 'character', icon: 'character' } %}
      {% endif %}
      {% if npc is defined %}
        {% include 'character/_list.html.twig' with { title: 'characters.npc', characters: npc, type: 'npc', icon: 'npc' } %}
      {% endif %}
      {% if premade is defined %}
        {% include 'character/_list.html.twig' with { title: 'characters.premade', characters: premade, type: 'premade', icon: 'premade' } %}
      {% endif %}
    </div>
  </div>
{% endblock %}
