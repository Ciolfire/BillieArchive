{% extends 'base.html.twig' %}

{% trans_default_domain 'character' %}

{% block title %}
  {{ "characters"|trans }}
{% endblock %}

{% block body %}
  {% if characters is defined %}
    {% include "character/_list.html.twig" with {'title': 'characters.pc', 'characters': characters, 'type': 'character'} %}
  {% endif %}
  {% if npc is defined %}
    {% include "character/_list.html.twig" with {'title': 'characters.npc', 'characters': npc, 'type': 'npc'} %}
  {% endif %}
  {% if generated is defined %}
    {% include "character/_list.html.twig" with {'title': 'characters.generated', 'characters': generated, 'type': 'template'} %}
  {% endif %}
{% endblock %}
