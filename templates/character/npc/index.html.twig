{% extends 'base.html.twig' %}

{% trans_default_domain 'character' %}

{% if chronicle is defined %}
  {% set showChronicle = 0 %}
{% endif %}

{% set footer = true %}
{% block bodyData %}
  data-controller="search" data-search-type-value="character"
{% endblock %}


{% block title %}{{ "npc.label.multi"|trans }}{% endblock %}

{% block body %}
{% include "_back.html.twig" %}
<h1>{{ "npc.label.multi"|trans }}</h1>
<div class="container">
  <div class="col-4 offset-4">
    <a class="btn btn-sm btn-primary w-100 text-center" href="{{ path('chronicle_npc_add', {'id': chronicle.id}) }}">{% include "_icon.html.twig" with {icon: 'character' } only %} {{ "action.new"|trans([], "app") }}</a>
  </div>
  <div class="row pt-3">
    {% for character in chronicle.npc %}
      {% include "character/_card.html.twig" %}
    {% endfor %}
  </div>
</div>
{% endblock %}
