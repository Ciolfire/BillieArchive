{% trans_default_domain 'app' %}

<div class="col-6 col-lg-2 mb-3">
  <a class="text-center p-0 {{ character.type }} btn btn-primary d-block w-100 h-100" href="{{ path('character_show', {'id': character.id}) }}">
    <div class="character-card-header">
      <img class="character-icon" src={% include "character/_icon.html.twig" %} />
      <div class="w-100 text-center">{{ ('type.' ~ character.type)|trans }}</div>
      <img class="character-icon" src={% include "chronicle/_icon.html.twig" with {"chronicle": character.chronicle} only %} />
    </div>
    <div class="character-card-name">
      {{ character.name }}
    </div>
    <div class="character-card-avatar position-relative text-center">
      <img src="{{ asset(character.id, 'characters') }}" onerror="this.src='{{ asset('default.jpg', 'characters') }}';this.onerror=null;" height="80">
    </div>
    <div class="position-relative">
      <div class="d-flex flex-column justify-content-end h-100">
        <p>
          {{ character.concept}}
        </p>
        {% if showPlayer|default(0) %}
          <p>
            {{ character.player }}
        </p>
        {% endif %}
        {% if showChronicle|default(1) %}
          <p class="accent">
            {{ character.chronicle }}
          </p>
        {% else %}
          <p class="accent">
            {{ character.groupName|default('-') }}
          </p>
        {% endif %}
        {# {% if isPremade|default(false) %} #}
          <p>
            PR: {{ character.powerRating }}
          </p>
        {# {% endif %} #}
      </div>
    </div>
  </a>
</div>