{% if character.type == "vampire" and character.covenant and access.hasRight('covenant')|default(false) %}
  <img class="character-icon" src="{{ asset(character.covenant.emblem, 'organizations_emblems') }}">
{% elseif character.type == "mage" and character.order and access.hasRight('order')|default(false) %}
  <img class="character-icon" src="{{ asset(character.order.emblem, 'organizations_emblems') }}">
{% elseif character.type == "werewolf" and character.whatever and access.hasRight('whatever')|default(false) %}
{% elseif character.organization and access.hasRight('organization')|default(false) %}
  <img class="character-icon" src="{{ asset(character.organization.emblem, 'organizations_emblems') }}">
{% else %}
  <img class="character-icon" src="{{ asset('rabbit_move_slow.gif', 'images') }}">
{% endif %}
