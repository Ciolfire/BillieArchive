{% trans_default_domain 'character' %}

<div class="row align-items-center px-2">
  <div class="col-12 col-lg text-left">
    {% include "icon.html.twig" with {'icon' : type } only %}
    {{ attribute.name }}
  </div>
  <div class="col-auto">
    <div class="my-1" role="group" {% block controller %}{% endblock %} {% block data %}{% endblock %}>
      {% block input %}{% endblock %}
      <div class="dots">
        {% for value in 1..max %}
          {% if value >= 5 and value % 5 == 1 %}
            </div>
            <div class="dots">
          {% endif %}
          {% block dot %}{% endblock %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
