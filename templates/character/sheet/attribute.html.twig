{% trans_default_domain 'character' %}

<div class="row align-items-center px-2">
  <div class="col">{{ ("attribute." ~ attribute)|trans }}</div>
  <div class="col-auto">
    <div class="my-1" role="group" aria-label="{{ attribute }}" data-controller="attribute" data-attribute-base-value="{{ base }}" data-attribute-min-value="{{ min }}">
      {{ form_row(attribute(form, attribute), {'attr': {'data-attribute-target': 'input'}}) }}
      <div class="attribute-dots">
        {% for value in 1..max %}
          {% if value % 5 == 1 %}
          </div>
            <div class="attribute-dots">
          {% endif %}
          <input type="checkbox" class="btn-check" id="{{ attribute ~ '-' ~ value }}" value="{{ value }}" autocomplete="off" data-attribute-target="attribute">
          <label class="btn attribute-dot {% if value <= min %}locked-dot{% endif %}" for="{{ attribute ~ '-' ~ value }}" 
            data-action="click->attribute#checkDots"
            data-attribute-value-param="{{ value }}">
          </label>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
