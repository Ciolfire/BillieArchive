{% trans_default_domain 'character' %}

{% block skills %}
<h2 class="text-center mt-3">{% trans %}skill.title{% endtrans %}</h2>
<p class="text-center text-sub" data-character--creation-target="creationSkill">({% trans %}skill.creation{% endtrans %})</p>
{% set max = 5 %}
{% set min = 0 %}
{% set base = 0 %}
<div class="row">
  <div class="col-md-4 d-md-flex justify-content-center">
    <div class="block skill-block">
      <h3 class="d-md-none d-block text-center pt-1">{% trans %}mental{% endtrans %}</h3>
      <p class="text-center text-sub mb-0">({% trans %}skill.unskilled.mental{% endtrans %})</p>
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'mental', 'skill': 'academics', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'mental', 'skill': 'computer', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'mental', 'skill': 'crafts', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'mental', 'skill': 'investigation', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'mental', 'skill': 'medecine', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'mental', 'skill': 'occult', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'mental', 'skill': 'politics', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'mental', 'skill': 'science', 'base': base, 'max': max, 'min': min } %}
    </div>
  </div>
  <div class="col-md-4 d-md-flex justify-content-center">
    <div class="block skill-block">
      <h3 class="d-md-none d-block text-center pt-1">{% trans %}physical{% endtrans %}</h3>
      <p class="text-center text-sub mb-0">({% trans %}skill.unskilled.physical{% endtrans %})</p>
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'physical', 'skill': 'athletics', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'physical', 'skill': 'brawl', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'physical', 'skill': 'drive', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'physical', 'skill': 'firearms', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'physical', 'skill': 'larceny', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'physical', 'skill': 'stealth', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'physical', 'skill': 'survival', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'physical', 'skill': 'weaponry', 'base': base, 'max': max, 'min': min } %}
    </div>
  </div>
  <div class="col-md-4 d-md-flex justify-content-center">
    <div class="block skill-block">
      <h3 class="d-md-none d-block text-center pt-1">{% trans %}social{% endtrans %}</h3>
      <p class="text-center text-sub mb-0">({% trans %}skill.unskilled.social{% endtrans %})</p>
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'social', 'skill': 'animal_ken', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'social', 'skill': 'empathy', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'social', 'skill': 'expression', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'social', 'skill': 'intimidation', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'social', 'skill': 'persuasion', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'social', 'skill': 'socialize', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'social', 'skill': 'streetwise', 'base': base, 'max': max, 'min': min } %}
      {% include "character/sheet/skill.html.twig" with {'categorie' : 'social', 'skill': 'subterfuge', 'base': base, 'max': max, 'min': min } %}
    </div>
  </div>
</div>
<h2 class="text-center mt-3">{% trans %}specialty.title{% endtrans %}</h2>
<p class="text-center text-sub" data-character--creation-target="creationSpec">({% trans %}specialty.creation{% endtrans %})</p>
<div class="row">
  <div class="col-4">
    <div class="block p-1">
      {{ form_row(form.specialty1) }}
    </div>
  </div>
  <div class="col-4">
    <div class="block p-1">
      {{ form_row(form.specialty2) }}
    </div>
  </div>
  <div class="col-4">
    <div class="block p-1">
      {{ form_row(form.specialty3) }}
    </div>
  </div>
</div>
{% endblock %}