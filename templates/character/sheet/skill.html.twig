{% trans_default_domain 'character' %}

<div class="row align-items-center px-2">
  <div class="col">{{ ("skill." ~ skill)|trans }}</div>
  <div class="col-auto">
    <div class="my-1" role="group" aria-label="{{ skill }}" data-controller="skill" data-skill-base-value="{{ base }}" data-skill-min-value="{{ min }}">
      <div class="skill-dots">
        {% for value in 1..max %}
          {% if value > 1 and value % 5 == 1 %}
          </div>
            <div class="skill-dots">
          {% endif %}
          <input type="checkbox" class="btn-check {{ 'dots-' ~ skill }}" id="{{ skill ~ '-' ~ value }}" value="{{ value }}" autocomplete="off" data-skill-target="skill">
          <label class="btn skill-dot" for="{{ skill ~ '-' ~ value }}" 
            data-action="click->skill#checkDots"
            data-skill-value-param="{{ value }}">
          </label>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
