{% trans_default_domain 'character' %}

{% block attributes %}
<h2 class="text-center">Attributes</h2>
{% set max = 5 %}
{% set min = 1 %}
{% set attributes = {
  'mental': {
    'power': 'intelligence',
    'finesse': 'wits',
    'resistance': 'resolve'
  }, 
  'physical': {
    'power': 'strength',
    'finesse': 'dexterity',
    'resistance': 'stamina'
  }, 
  'social': {
    'power': 'presence',
    'finesse': 'manipulation',
    'resistance': 'composure'
  }
} %}
<div class="row">
  {% for category, attributes in attributes %}
    <div class="col-md-4 d-md-flex justify-content-center">
      <div class="block attribute-block">
        <h3 class="text-center pt-1">{{ category|trans }}</h3>
        {% for type, attribute in attributes %}
          {% include "character/show/attribute.html.twig" with { 'base': attribute(character, attribute) } %}
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}