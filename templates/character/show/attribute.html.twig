{% trans_default_domain 'character' %}

<div class="row align-items-center px-2">
  <div class="col">
    {% include "icon.html.twig" with {'icon' : type } only %}
    {{ ("attribute." ~ attribute)|trans }}
  </div>
  <div class="col-auto">
    <div class="my-1" role="group">
      <div class="attribute-dots">
        {% for value in 1..max %}
          {% if value % 5 == 1 %}
            </div>
            <div class="attribute-dots">
          {% endif %}
          <input type="checkbox" class="btn-check" id="{{ attribute ~ '-' ~ value }}" value="{{ value }}" autocomplete="off" {% if value <= base %}checked{% endif %} disabled>
          <label class="btn dot {% if value <= min %}dot-locked{% endif %}" for="{{ attribute ~ '-' ~ value }}">
          </label>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
