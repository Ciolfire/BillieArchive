{% trans_default_domain 'character' %}

<div id="menu" class="block text-center text">
  <div class="container">
    <div class="row g-0">
      <div class="col px-1">
        <a href="{{ path('character_edit', {'id': character.id}) }}" class="btn btn-sm btn-primary w-100">Evolution</a>
      </div>
      <div class="col px-1">
        {% if character.isMortal %}
          <a href="{{ path('character_embrace', {'id': character.id}) }}" class="btn btn-sm btn-primary w-100">Embrace</a>
        {% endif %}
      </div>
      <div class="col px-1">
        <a href="{{ path('character_index') }}" class="btn btn-sm btn-primary w-100">Back</a>
      </div>
    </div>
  </div>
</div>