{% extends 'base.html.twig' %}

{% block title %}BA - {{ status_code }}{% endblock %}

{% block body %}
  {% block page_title %}
    <h1 class="text-warning m-5">
      {{ status_code }}
      -
      {{ status_text }}
    </h1>
  {% endblock %}

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-8 col-md-4 text-center block rounded">
        <p>{% block text %}{{ ("page.error." ~ status_code)|trans|nl2br }}{% endblock %}</p>
      </div>
      <div class="w-100 m-2"></div>
      <div class="col-12 col-sm-4 text-center">
        {% block img %}<img style="height:10em;" src="{{ asset("billie3.webp", 'images') }}">{% endblock %}
      </div>
    </div>
  </div>
{% endblock %}