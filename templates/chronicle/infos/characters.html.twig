{% trans_default_domain 'app' %}

<div class="row my-2">
	<div class="block py-2">
		<h2>{% include "_icon.html.twig" with { icon: 'characters', class: 'icon-strong' } only %}{{ "label.multi"|trans({}, 'character') }}</h2>
		<div class="row">
			{% if character.peekingRights|default(null) is empty %}
				{{ 'empty'|trans }}
			{% else %}
				{% for peekingRight in character.orderdPeekingRights %}
					{% if peekingRight.rights is not empty %}
						{% include 'character/_peeking_card.html.twig' with { character: peekingRight.target, access: peekingRight } %}
					{% endif %}
				{% endfor %}
			{% endif %}
		</div>
	</div>
</div>
