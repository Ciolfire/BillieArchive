{% trans_default_domain 'app' %}

<div class="col-12">
  <div class="block p-3">
    <h2>{% include "_icon.html.twig" with {'icon': 'characters', 'class': 'icon-lg'} %}{{ "characters.label"|trans}}</h2>
    <div class="row">
      {% for peeking in character.peekingRights|default(null) %}
        {% if peeking.rights is not empty %}
          {% include "character/_peeking_card.html.twig" with {'character': peeking.target, 'access': peeking} %}
        {% endif %}
      {% endfor %}
      {% if character.peekingRights is empty %}
        {{ "empty"|trans }}
      {% endif %}
    </div>
  </div>
</div>