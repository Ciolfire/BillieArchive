{% extends 'base.html.twig' %}

{% trans_default_domain 'chronicle' %}
{% set setting = chronicle.type %}

{% block body %}
	{% include '_back.html.twig' %}
	{% include '_top.html.twig' %}
	<div class="container-fluid container-lg py-3">
		<h1 class="strong">
			{% include "_icon_setting.html.twig" with {setting: chronicle.type } only %}
			{{ chronicle.name }}
		</h1>
		<div class="block">
			<a class="btn btn-primary w-100" href="{{ path('item_new_for_content', {target: 'chronicle', id: chronicle.id}) }}">
				<span class="d-none d-md-inline">{% include "_icon.html.twig" with {icon: 'add' } only %}</span>
				{% include "_icon.html.twig" with {icon: 'item' } only %}
			</a>
			{% include 'chronicle/infos/_items.html.twig' %}
		</div>
	</div>
{% endblock %}
