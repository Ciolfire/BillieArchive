{% extends 'base.html.twig' %}

{% trans_default_domain 'chronicle' %}
{% set setting = chronicle.type %}

{% block shortcuts %}
  {% if chronicle|default(false) == false %}
  {% else %}
    {% include "_back.html.twig" with {link: path('homebrew_index', {id: chronicle.id})} %}
    {% include "_top.html.twig" %}
  {% endif %}
  <a class="btn btn-primary btn-sm mt-1" href="{{ path('item_new_for_content', {target: 'chronicle', id: chronicle.id}) }}">
    {% include "_icon.html.twig" with {icon: 'add' } only %}
    {% include "_icon.html.twig" with {icon: 'item' } only %}
  </a>
{% endblock %}

{% block body %}
  <div class="container-fluid container-lg py-3">
    <h1 class="strong">
      {% include "_icon_setting.html.twig" with {setting: chronicle.type } only %}
      {{ chronicle.name }}
    </h1>
    <div class="block mt-3">
      {% include 'chronicle/infos/_items.html.twig' %}
    </div>
  </div>
{% endblock %}
