{% extends "character/sheet/disciplines.html.twig" %}

{% trans_default_domain 'character' %}

{% block create %}
<div class="col-12 text-center block-solid mt-2">
  {% trans %}embrace.discipline.creation.info{% endtrans %}
  <br>
  {% trans %}embrace.discipline.creation.favored{% endtrans %}
  <span data-character--embrace-target="disciplinesFavored">0</span>/<span class="ok">2</span>
  {% trans %}embrace.discipline.creation.all{% endtrans %}
