    </div> #}
    {% if is_granted('ROLE_ST') %}
      <div class="ms-auto">
        <a class="btn btn-primary" href="{{ path('vampire_devotion_new') }}">
          <span class="d-none d-md-inline">{% include "icon.html.twig" with {'icon' : 'add', 'hasTips': 0 } only %}</span>
          {% include "icon.html.twig" with {'icon' : 'devotion', 'hasTips': 0 } only %}
        </a>
      </div>
    {% endif %}
  </div>
  <div class="col-auto py-3 footer-collapse collapse">
