{% trans_default_domain 'character' %}

{% extends 'base.html.twig' %}

{% block title %}{{ "vampire.bloodline.join"|trans }}{% endblock %}

{% block body %}
  <h1>Your blood thicken...</h1>
  <div class="container block py-3 mt-5">
    <h2>{{ vampire.name }}</h2>
    {% for bloodline in bloodlines %}
      <div class="block {{ bloodline.name }} d-none" data-character--embrace-target="clanDescription">
        <div class="p-3">{{ bloodline.short|markdown_to_html }}</div>
        <div class="p-3 d-none">{{ bloodline.description|markdown_to_html }}</div>
      </div>
    {% endfor %}
    {# {% include "vampire/embrace/disciplines.html.twig" %} #}
    <div class="row">
      <div class="col">
        <button class="btn btn-primary w-100 disabled" type="submit" data-character--embrace-target="submit" data-action="click->character--embrace#clean">{{ "vampire.bloodline.join"|trans }}</button>
      </div>
    </div>
  </div>
{% endblock %}