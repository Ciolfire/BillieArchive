{% trans_default_domain 'character' %}

{% extends 'base.html.twig' %}

{% block title %}{{ "vampire.bloodline.join"|trans }}{% endblock %}

{% block body %}
  <h1>{{ vampire.name }}</h1>
  <div class="container block py-3 mt-5">
    <h2>Your blood thicken...</h2>
    <form method="post">
      {% for bloodline in bloodlines %}
        <input id="{{ bloodline.id }}" name="bloodline" type="radio" class="btn-check" value="{{ bloodline.id }}">
        <div class="block btn btn-primary {{ bloodline.name }} ">
          <label for="{{ bloodline.id }}" class="btn btn-primary">
            <h1 class="p-3">{{ bloodline.name }}</h1>
            <div class="p-3">{{ bloodline.short|markdown_to_html }}</div>
            <div class="p-3 d-none">{{ bloodline.description|markdown_to_html }}</div>
          </label>
        </div>
      {% endfor %}
      {# {% include "vampire/embrace/disciplines.html.twig" %} #}
      <div class="row">
        <div class="col">
          <button class="btn btn-primary w-100" type="submit">{{ "vampire.bloodline.join"|trans }}</button>
        </div>
      </div>
    </form>
  </div>
{% endblock %}