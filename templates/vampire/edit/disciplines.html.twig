{% extends "vampire/sheet/disciplines.html.twig" %}

{% trans_default_domain 'character' %}

{% block list %}
  {% set max = 5 %}
  {% set maxPower = 5 %}
  {% for chDiscipline in character.disciplines %}
    <div class="col-12 col-lg-6 justify-content-center">
      <div class="discipline-block w-100 container g-0">
        {% set min = chDiscipline.level %}
        {% set base = chDiscipline.level %}
        {% include "vampire/edit/discipline.html.twig" with { 'discipline': chDiscipline.discipline } %}
      </div>
    </div>
  {% endfor %}
  <h2 class="text-center py-3 user-select-none">New Disciplines</h2>
  {% for discipline in vampire.disciplines %}
    <div class="col-12 col-lg-6 justify-content-center">
      <div class="block w-100 container g-0">
        {% set min = 0 %}
        {% set base = 0 %}
        {% include "vampire/edit/discipline.html.twig" %}
      </div>
    </div>
  {% endfor %}
{% endblock %}
