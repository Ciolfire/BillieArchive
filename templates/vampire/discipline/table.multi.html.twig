<thead class="collapse discipline-{{ discipline.id }}">
  <tr>
    <th scope="col">{{ ("level")|trans({}, 'app') }}</th>
    <th scope="col">{{ ("name")|trans({}, 'app') }}</th>
    <th scope="col">{{ ("short")|trans({}, 'app') }}</th>
    <th scope="col">{{ ("actions")|trans({}, 'app') }}</th>
  </tr>
</thead>
<tbody class="collapse discipline-{{ discipline.id }}">
  {% for power in discipline.powers %}
    <tr class="table-secondary">
      <td>{{ power.getLevelDots }}</td>
      <td>{{ power.name }}</td>
      <td>{{ power.short }}</td>
      <td class="border-start">
        {% if is_granted('ROLE_ST') %}
          <a href="{{ path('discipline_power_edit', {'id': power.id}) }}">{% include "icon.html.twig" with {'icon' : 'edit' } only %}</a>
        {% endif %}
      </td>
    </tr>
  {% endfor %}
</tbody>