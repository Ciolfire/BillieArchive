{% trans_default_domain 'character' %}

<div class="row align-items-center px-2 user-select-none">
  <div class="col-1"></div>
  <div class="col text-center p-2">
    <h2>{{ charDiscipline.discipline.name }}</h2>
  </div>
  <div class="col-auto">
    <div class="my-1" role="group" {% block controller %}{% endblock %} {% block data %}{% endblock %}>
      {% block input %}{% endblock %}
      <div class="dots">
        {% for value in 1..max %}
          {% if value >= 5 and value % 5 == 1 %}
            </div>
            <div class="dots">
          {% endif %}
          {% block dot %}{% endblock %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<div class="fluff">{{ charDiscipline.discipline.description }}</div>
<div class="row ok">
  {% block rulesBtn %}{% endblock %}
  {% block powersBtn %}{% endblock %}
</div>
<div class="row m-0 pt-2 collapse-block">
  {% block rules %}{% endblock %}
  {% block powers %}{% endblock %}
</div>