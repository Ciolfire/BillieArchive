{% extends 'base.html.twig' %}

{% trans_default_domain 'app' %}

{% block title %}{{ "register.resend"|trans }}{% endblock %}

{% block body %}
  <div class="d-flex align-items-center vh-100">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-8 col-lg-4 block text-center">
          {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
          {% endfor %}

          <h1>
            {% include "_icon.html.twig" with {icon: 'register', 'class': 'icon-lg'} %}
            {{ "register.resend"|trans }}
          </h1>

          {{ form_start(form) }}
          {{ form_row(form.email) }}
          <div class="row">
            <div class="col-8">
              <button type="submit" class="btn btn-primary w-100 mb-2">
                {% include "_icon.html.twig" with {icon: 'send'} %}
                {{ "action.send"|trans }}
              </button>
            </div>
            <div class="col-4">
              <a href="{{app.request.headers.get('referer')}}" class="btn btn-primary w-100 mb-2">
                {% include "_icon.html.twig" with {icon: 'back', 'hasTips': true } %}
                {{ "action.back"|trans }}
              </a>
            </div>
          </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
