{% extends "item/_card.html.twig" %}

{% block extraData %}
data-character--item-target="item"
data-id="{{ item.id }}"
{% endblock %}

{% block actions %}
  <div class="row g-0 text-center">
    {% if item.isContainer %}  
      <div class="col">
        <button type="button" class="btn btn-primary" data-tabs-target="tab" data-action="click->tabs#show" data-tabs-target-param="container-{{ item.id }}">{% include "_icon.html.twig" with {icon: 'container', class:'text-strong'} only %}</button>
      </div>
    {% endif %}
    <div class="col">
      {# Equip #}
      <button type="button" class="btn btn-primary {% if item.isEquipped %}active{% endif %}" data-action="click->character--item#equip" data-character--item-id-param="{{ item.id }}">
        {% include "_icon.html.twig" with {icon: 'engagement-ring', class:'text-strong'} only %}
      </button>
    </div>
    <div class="col">
      {# Move #}
      <button type="button" class="btn btn-primary position-relative"
        data-bs-toggle="modal" data-bs-target="#itemMoveModal"
        data-action="click->character--item#prepare" data-character--item-id-param="{{ item.id }}" data-character--item-container-param="{{ item.container.id|default(0) }}"
      >
        {% include "_icon.html.twig" with {icon: 'right', class:'text-strong'} only %}
      </button>
    </div>
    <div class="col">
      {# Share #}
      <button type="button" class="btn btn-primary {% if item.isShared %}active{% endif %}" data-action="click->character--item#share" data-character--item-id-param="{{ item.id }}">
        {% include "_icon.html.twig" with {icon: 'view', class:'text-strong'} only %}
      </button>
    </div>
    <div class="col">
      {# Drop #}
      <button class="btn btn-primary btn-danger"
        data-bs-toggle="modal" data-bs-target="#itemDropModal"
        data-action="click->character--item#prepare" data-character--item-id-param="{{ item.id }}"
      >
        {% include "_icon.html.twig" with {icon: 'delete', class:'text-strong'} only %}
      </button>
    </div>
  </div>
{% endblock %}
