{% extends 'base.html.twig' %}

{% trans_default_domain 'note' %}

{% if title is not defined %}
  {% set title = 'new'|trans %}
{% endif %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container">
  <div class="row mb-3 justify-content-end">
    <div class="col-2">
      <a href="{{ path('character_show', {'id': note.character.id} ) }}" class="btn btn-sm btn-menu btn-primary w-100">
        {% include "_icon.html.twig" with {icon: 'back'} only %}
      </a>
    </div>
  </div>
  <div class="row block">
    <h1 class="text-center mt-3">
      {{ title }}
      {% include "_icon.html.twig" with {icon: 'note'} only %}
    </h1>
    <div class="col">
      {{ form(form) }}
    </div>
  </div>
</div>
{% endblock %}
