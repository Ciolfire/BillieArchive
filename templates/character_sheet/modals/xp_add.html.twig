{% trans_default_domain 'character' %}

<div class="modal fade" id="xpAddModal" tabindex="-1" aria-labelledby="xpAddModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content block-solid">
      <div class="modal-header">
        <h5 class="modal-title text-sub" id="xpAddModalLabel">{{'xp.modal'|trans([], 'logs-xp') }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input class="form-control" type="number" step="1" min="1" data-character--experience-target="input"/>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal" data-action="click->character--experience#update" data-character--experience-method-param="add">
          {{ 'xp.save'|trans([], 'logs-xp') }}
        </button>
      </div>
    </div>
  </div>
</div>