{% set isLarge = true %}
{% set hasFooter = true %}
{% set id = "devotionShowModal" %}

{% block data %}
  data-vampire--devotion-target="modal"
{% endblock %}

{% block title %}
{% endblock %}

{% block body %}
  <div id="devotionShowModalDescription"></div>
{% endblock %}

{% block footer %}
