{% trans_default_domain 'character' %}

{% block creation %}{% endblock %}
<div class="position-relative row mb-2 ps-4">
  <div id="merit-hide" type="button" data-bs-toggle="collapse" data-bs-target="#meritsWrapper">
    <div class="position-sticky top-50 my-2">
      <span >{% include "_icon.html.twig" with {'icon' : 'show' } only %}</span>
    </div>
  </div>
  <div id="meritsWrapper" class="collapse show">
    <p class="merit-filters mb-1 ms-5">
      <span class="btn btn-primary" data-action="click->character--merits#filter" data-character--merits-target="filter" data-character--merits-category-param="">
        <span class="d-none d-md-inline">{{ "all"|trans([], 'icon') }}</span>
        {% include "_icon.html.twig" with {'icon' : 'all' } only %}
      </span>
      <span class="btn btn-primary" data-action="click->character--merits#filter" data-character--merits-target="filter" data-character--merits-category-param="mental">
        <span class="d-none d-md-inline">{{ "mental"|trans }}</span>
        {% include "_icon.html.twig" with {'icon' : 'mental' } only %}
      </span>
      <span class="btn btn-primary" data-action="click->character--merits#filter" data-character--merits-target="filter" data-character--merits-category-param="physical">
        <span class="d-none d-md-inline">{{ "physical"|trans }}</span>
        {% include "_icon.html.twig" with {'icon' : 'physical' } only %}</span>
      <span class="btn btn-primary" data-action="click->character--merits#filter" data-character--merits-target="filter" data-character--merits-fighting-param="fighting">
        <span class="d-none d-md-inline">{{ "style"|trans([], 'icon') }}</span>
        {% include "_icon.html.twig" with {'icon' : 'style' } only %}
      </span>
      <span class="btn btn-primary" data-action="click->character--merits#filter" data-character--merits-target="filter" data-character--merits-category-param="social">
        <span class="d-none d-md-inline">{{ "social"|trans }}</span>
        {% include "_icon.html.twig" with {'icon' : 'social' } only %}
      </span>
      <span class="btn btn-primary" data-action="click->character--merits#filter" data-character--merits-target="filter" data-character--merits-race-param="{{ character.type }}">
        <span class="d-none d-md-inline">{{ ("type." ~ character.type)|trans([], 'app') }}</span>
        {% include "_icon.html.twig" with {'icon' : character.type } only %}
      </span>
      {% if character.id == null %}
      <span class="btn btn-primary" data-action="click->character--merits#filter" data-character--merits-target="filter" data-character--merits-creation-param="creation">
        <span class="d-none d-md-inline">{{ "creation"|trans([], 'icon') }}</span>
        {% include "_icon.html.twig" with {'icon' : 'creation' } only %}
      </span>
      {% endif %}
    </p>
    <div class="row row-cols-1 row-cols-lg-2 row-cols-xxl-3 ps-5 mt-0 g-4">
      {% block list %}{% endblock %}
    </div>
  </div>
</div>
