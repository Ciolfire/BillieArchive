{% if id is not defined %}
  {% set id = merit.id %}
{% endif %}

<div class="col py-2">
  <div class="card merit-card block{% block owned %}{% endblock %}" name="{{ "merit-" ~ id }}" data-unique="{{ merit.isUnique|number_format }}">
    <div class="card-header">
      <div class="row align-items-center">
        <div class="col-auto" type="button" aria-expanded="false" aria-controls="merit-{{ id }}-text">
          {% include "_icon.html.twig" with {'icon' : merit.category } only %}
          <span class="merit-name">{{ merit.name }}</span>
          <span class="accent">{% include "_icon.html.twig" with {'icon' : merit.type } only %}</span>
        </div>
        <div class="col text-end">
          <div class="my-1" role="group" {% block controller %}{% endblock %} {% block data %}{% endblock %}>
            {% if merit.homebrewFor is not null %}{% include "_icon.html.twig" with {'icon' : 'homebrew', 'class': 'accent' } only %}{% endif %}
            {% if merit.isFighting %}{% include "_icon.html.twig" with {'icon' : 'style' } only %}{% endif %}
            {% if merit.isCreationOnly %}{% include "_icon.html.twig" with {'icon' : 'creation' } only %}{% endif %}
              {% block input %}{% endblock %}
              <div class="dots">
              {% for value in 1..merit.max %}
                {% if value >= 5 and value % 5 == 1 %}
                  <span class="ms-1"></span>
                {% endif %}
                {% block dot %}{% endblock %}
              {% endfor %}
            </div>
          </div>
        </div>
        <div class="col-12">
          {% if merit.isExpanded %}
            {% block expanded %}{% endblock %}
          {% endif %}
        </div>
      </div>
    </div>
    <div id="merit-{{ id }}-body" class="card-body text-center text py-0 d-flex flex-column accordion">
      <div id="merit-{{ id }}-short" class="card-text collapse show flex-grow-1" data-bs-toggle="collapse" data-bs-target="#merit-{{ id }}-effect" data-bs-parent="#merit-{{ id }}-body" type="button">
        {{ merit.description }}
        <div class="w-100 text-center"><i class="fas fa-caret-down"></i></div>
      </div>
      <div id="merit-{{ id }}-effect" class="card-text collapse mb-2" data-bs-toggle="collapse" data-bs-target="#merit-{{ id }}-short" data-bs-parent="#merit-{{ id }}-body" type="button">
        {{ merit.effect|default("")|markdown_to_html }}
        <div class="w-100 text-center"><i class="fas fa-caret-up"></i></div>
      </div>
    </div>
    <div class="card-footer text py-1">
      <span class="pe-3">
      {% if merit.book is not null %}
        <span data-bs-toggle="tooltip" data-bs-placement="top" title="{{ merit.book.name }}">
          <span class="accent">{{ merit.book.short }} {{ merit.page }}</span>
        </span>
      {% elseif merit.homebrewFor is defined and merit.homebrewFor is not null %}
        <span class="accent">{{ merit.homebrewFor.name }}</span>
      {% else %}
        <span class="warning">{{ 'source.not.found'|trans([], 'app') }}</span>
      {% endif %}
      </span>
      {% include "character_sheet/element/meritPrerequisites.html.twig" %}
    </div>
  </div>
</div>