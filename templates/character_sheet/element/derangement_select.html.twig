{% trans_default_domain 'app' %}

<label class="accent" for="derangement">{{ "derangement.label"|trans }}</label>
<select class="form-control" name="derangement" autocomplete="off" {% if required|default(false) %}required{% endif %}
>
  <option value=""></option>
  {% for derangement in derangements %}
    <option value="{{ derangement.id }}" class="collapsed" data-bs-toggle="collapse" data-bs-target="#derangement-{{ derangement.id }}-{{ tag|default('new') }}">
      {% if derangement.isExtreme %}({{ "derangement.extreme"|trans }}){% endif %}
      {{ derangement.name }}
      â€”
      {% if derangement.isMild %}{{ "derangement.mild"|trans }}{% else %}{{ "derangement.severe"|trans }}{% endif %}
      {% if derangement.type %}{{("type." ~ derangement.type)|trans }}{% endif %}
    </option>
  {% endfor %}
</select>
