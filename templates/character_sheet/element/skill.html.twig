{% trans_default_domain 'character' %}

{% set specialties = attribute(character, 'skillSpecialties', [skill]) %}

<div class="row align-items-center px-2" {% block wrapper %}{% endblock %}>
  <div class="col {% if attribute(character, "skills") is not null and attribute(attribute(character, "skills"), skill) > 3 %}accent{% endif %}">
    <span class="user-select-none">
      {% include "_icon.html.twig" with {'icon' : skill } only %}
      {{ name }}
    </span>
    {% block specialty %}{% endblock %}
  </div>
  <div class="col-auto">
    <div class="my-1" role="group" {% block controller %}{% endblock %} {% block data %}{% endblock %}>
      {% block input %}{% endblock %}
      <div class="dots">
        {% for value in 1..max %}
          {% if value >= 5 and value % 5 == 1 %}
          </div>
            <div class="dots">
          {% endif %}
          {% block dot %}{% endblock %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% block specialties %}{% endblock %}
