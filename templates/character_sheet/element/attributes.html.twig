{% trans_default_domain 'character' %}

{% set max = character.limit %}
{% set min = 1 %}
{% set base = 1 %}

{% block attributes %}
  <h2>Attributes</h2>
  {% block creation %}{% endblock %}
  {% for category, attributes in attributes %}
    <div class="col-4 d-lg-flex justify-content-center">
      <div class="block attribute-block">
        <h3 class="text-center pt-1">{{ category|trans }}</h3>
        {% for type, attribute in attributes %}
          {% block attribute %}{% endblock %}
        {% endfor %}
      </div>
    </div>
  {% endfor %}
{% endblock %}