{% extends 'base.html.twig' %}

{% trans_default_domain 'character' %}

{% block body %}
{{ include('_back.html.twig') }}
<div class="row">
  <h2 class="text-center mt-3">{{ 'background.label'|trans }}</h2>
  <div class="col mx-5">
    {{ form_start(form) }}
    {{ form_widget(form.background) }}
    <div class="text-center">{{ form_widget(form.save, {'attr': {'class': 'btn-primary w-100'}}) }}</div>
    {{ form_end(form) }}
  </div>
</div>
{% endblock %}