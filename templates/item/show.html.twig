{% extends "base.html.twig" %}

{% block body %}
  <div class="container block py-5">
    {% if is_granted('ROLE_ST') %}
      <a class="float-end" href="{{ path('item_edit', {id: item.id}) }}">{% include "_icon.html.twig" with {icon: 'edit'} only %}</a>
    {% endif %}
    {% include "item/_show.html.twig" %}
    <a class="btn btn-danger" href="{{ path('item_delete', {id: item.id}) }}">{% include "_icon.html.twig" with {icon: 'delete'} only %}</a>
  </div>
{% endblock %}