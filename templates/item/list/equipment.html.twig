{% trans_default_domain 'item' %}

{% extends "item/_table.html.twig" %}

{% set cols = {
  'quality': 'quality',
}|merge(cols) %}

{% set special = {
  'quality': 0,
}|merge(special) %}

{% block extra %}
  {% if item.description is not empty %}
    <div class="col-12">
      <div class="item-detail-header p-1">
        {% include "_icon.html.twig" with {icon: "image", label: "description"|trans([], 'app'), class: 'text-strong'} %}
      </div>
    </div>
    <div class="col-12">
      <div class="item-detail text-dark">{{ item.description|markdown_to_html }}</div>
    </div>
  {% endif %}
  <div class="col-12">
    <div class="item-detail-header p-1">
      {% include "_icon.html.twig" with {icon: "info", label: "functionality.label"|trans, class: 'text-strong'} %}
    </div>
  </div>
  <div class="col-12">
    <div class="item-detail text-dark">{{ item.functionality|markdown_to_html }}</div>
  </div>
{% endblock %}
