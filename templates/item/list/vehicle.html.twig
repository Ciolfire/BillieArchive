{% extends "item/info-table.html.twig" %}

{% set cols = {
  'handling': 'vehicle',
  'acceleration': 'acceleration',
  'safeSpeed': 'speed-low',
  'maxSpeed': 'speed-high'
}|merge(cols) %}

{# {% set special = {
}|merge(special) %} #}

{% block extra %}
  {% if item.description is not empty %}
    <div class="col-12">
      <div class="item-detail-header p-1">
        {% include "_icon.html.twig" with {icon: "image", label: "description"|trans([], 'app'), class: 'text-strong'} %}
      </div>
    </div>
    <div class="col-12">
      <div class="item-detail text-dark">{{ item.description|markdown_to_html }}</div>
    </div>
  {% endif %}
{% endblock %}