{% trans_default_domain 'item' %}

{% extends "item/_table.html.twig" %}

{% set cols = {
  'damage': 'damage',
  'damageType': 'damageType',
}|merge(cols) %}

{# {% set special = {
}|merge(special) %} #}

{% block extra %}
  {% if item.description is not empty %}
    <div class="col-12">
      <div class="item-detail-header p-1">
        {% include "_icon.html.twig" with {icon: "image", label: "description"|trans([], 'app'), class: 'text-strong'} %}
      </div>
    </div>
    <div class="col-12">
      <div class="item-detail text-dark">{{ item.description|markdown_to_html }}</div>
    </div>
  {% endif %}
  {% if item.special is not empty %}
    <div class="col-12">
      <div class="item-detail-header p-1">
        {% include "_icon.html.twig" with {icon: "info", label: "special.label"|trans, class: 'text-strong'} %}
      </div>
    </div>
    <div class="col-12">
      <div class="item-detail text-dark">{{ item.special|markdown_to_html }}</div>
    </div>
  {% endif %}
{% endblock %}