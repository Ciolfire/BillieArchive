{% trans_default_domain 'item' %}

<div id="{{ item.id }}" class="col-12" data-search-target="item" data-name="{{ item.name }}" data-type="{{ item.typeName }}">
  <div class="merit">
    <a class="float-end text-end text-strong" href="{{ path('item_edit', {'id': item.id }) }}">{% include "_icon.html.twig" with {icon : 'edit'} only %}</a>
    <h2 class="text-strong m-0" data-bs-toggle="collapse" data-bs-target="#{{ item.id }}ItemDetails" role="button">
      {% if item.img is not null %}
        <img class="mx-auto my-1 rounded" src="{{ asset(item.img, 'items') }}" alt="{{ item.name}}" height="40"/>
      {% endif %}
      {{ item.name }}
      {% include "_icon.html.twig" with {icon: item.typeName} %}
    </h2>
    <div id="{{ item.id }}ItemDetails" class="collapse">
      {% if item.img is not null %}
        <div class="text-strong text-center">
          <div class="btn btn-primary p-5" data-bs-toggle="collapse" data-bs-target="#{{ item.id }}ItemDetails">
            <img class="rounded p-1 img-fluid" src="{{ asset(item.img, 'items') }}" alt="{{ item.name}}"/>
          </div>
        </div>
      {% endif %}
      {% include "item/list/_item.html.twig" ignore missing %}
    </div>
  </div>
</div>
