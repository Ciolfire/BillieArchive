{% extends 'base.html.twig' %}

{% trans_default_domain 'app' %}

{% if entity.id is null %}
  {% set action = "new" %}
{% else %}
  {% set action = "edit" %}
{% endif %}

{% block title %}
{{ (element ~ '.' ~ action)|trans }}
{% endblock %}


{% block body %}
  <h1 class="py-3">{% include "_icon.html.twig" with {'icon': element, 'class': 'icon-xl'} %} {{ (element ~ '.' ~ action)|trans }}</h1>
  <div class="container block py-3">
    {{ include('element/forms/_form.html.twig') }}
  </div>
  {% if entity.id is not null %}
    <button type="button" class="float-end btn btn-warning" data-bs-toggle="modal" data-bs-target="#deleteModal-{{ element }}-{{ entity.id }}">{% include "_icon.html.twig" with {'icon': 'delete'} only %}</button>
    {% include "element/_delete.html.twig" %}
  {% endif %}
  {% include "_back.html.twig" %}
{% endblock %}
