<div id="{{ attribute.identifier }}" class="col-12 col-xl-6 mb-4">
	<div class=" block block-wiki p-2">
		{% if is_granted('ROLE_ST') %}
			<a class="float-end" href="{{ path(entity ~ '_edit', {'id': attribute.id}) }}">{% include "_icon.html.twig" with {icon: 'edit'} only %}</a>
		{% endif %}
		<h2>
      {% include "_icon.html.twig" with {icon: attribute.category } %}
      {{ attribute.name }}
      {% include "_icon.html.twig" with {icon: attribute.type } %}
    </h2>
		<div class="fluff">{{ element.fluff|default("")|markdown_to_html }}</div>
		<p class="text">{{ element.description|default("")|markdown_to_html }}</p>
	</div>
</div>
