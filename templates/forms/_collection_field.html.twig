{% trans_default_domain domain %}

  <div class="bdr bdr-accent p-1 my-2">
    <div {{ stimulus_controller('form-collection') }}
      data-form-collection-index-value="{{ attribute(form, field)|length > 0 ? attribute(form, field)|last.vars.name + 1 : 0 }}"
      data-form-collection-prototype-value="{{ form_widget(attribute(form, field).vars.prototype)|e('html_attr') }}"
    >
      <ul class="row g-1" {{ stimulus_target('form-collection', 'collectionContainer') }}>
        <h3 class="text-start">{{ (field ~ ".label")|trans }}</h3>
          {% for element in attribute(form, field) %}
            {{ form_row(element)}}
          {% endfor %}
      </ul>
      <button type="button" class="btn btn-primary btn-lg m-2" {{ stimulus_action('form-collection', 'addCollectionElement') }}>
        {{ "action.add"|trans(domain: 'app') }}
        {% include "_icon.html.twig" with {icon: 'add' } %}
      </button>
    </div>
  </div>
